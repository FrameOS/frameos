{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Frontend",
            "command": "nvm use && pnpm run dev",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/frontend",
            "presentation": {
                "group": "main"
            },
            "skipFiles": ["${workspaceFolder}/node_modules/kea-typegen/**/*.js"]
        },
        {
            "name": "Backend",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/run.py",
            "args": ["runserver"],
            "django": true,
            "env": {
                "PYTHONUNBUFFERED": "1",
                "SECRET_KEY": "notsosecret__changeme",
                "DEBUG": "1",
                "GEVENT_SUPPORT": "1"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "presentation": {
                "group": "main"
            }
        },
        {
            "name": "Huey",
            "type": "debugpy",
            "justMyCode": true,
            "autoReload": {
                "enable": true,
                "include": ["backend/**/*.py"]
            },
            "request": "launch",
            "program": "${workspaceFolder}/backend/env/bin/huey_consumer.py",
            "args": ["app.huey.huey", "--worker-type=greenlet", "--workers=10", "--flush-locks"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONUNBUFFERED": "1`",
                "DEBUG": "1",
                "GEVENT_SUPPORT": "1"
            },
            "presentation": {
                "group": "main"
            }
        },
        {
            "name": "Pytest: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-vvv"],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "FrameOS All",
            "configurations": ["Backend", "Huey", "Frontend"],
            "stopAll": true,
            "presentation": {
                "order": 1,
                "group": "compound"
            }
        }
    ]
}