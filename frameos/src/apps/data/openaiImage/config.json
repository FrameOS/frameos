{
  "name": "OpenAI Image",
  "description": "Random AI generated art from OpenAI's DALL-E models",
  "category": "legacy",
  "version": "1.0.0",
  "settings": ["openAI"],
  "fields": [
    {
      "name": "prompt",
      "type": "text",
      "rows": 4,
      "value": "",
      "required": true,
      "label": "Prompt",
      "placeholder": "e.g. pumpkin pyjama party, digital art"
    },
    {
      "name": "model",
      "type": "select",
      "options": ["dall-e-3", "dall-e-2"],
      "value": "dall-e-3",
      "required": true,
      "label": "Model"
    },
    {
      "name": "size",
      "type": "select",
      "options": ["best for orientation", "1024x1024", "1792x1024", "1024x1792"],
      "value": "best for orientation",
      "label": "Size (dall-e-3)"
    },
    {
      "name": "style",
      "type": "select",
      "options": ["vivid", "natural", ""],
      "value": "vivid",
      "label": "Style"
    },
    {
      "name": "quality",
      "type": "select",
      "options": ["standard", "hd", ""],
      "value": "standard",
      "label": "Quality"
    }
  ],
  "output": [
    {
      "name": "image",
      "type": "image",
      "label": "Image"
    }
  ]
}
