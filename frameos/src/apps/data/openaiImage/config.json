{
  "name": "OpenAI Image",
  "description": "Random AI generated art from OpenAI's DALL-E models",
  "category": "data",
  "version": "1.0.0",
  "settings": ["openAI"],
  "fields": [
    {
      "name": "prompt",
      "type": "text",
      "rows": 4,
      "value": "",
      "required": true,
      "label": "Prompt",
      "placeholder": "e.g. pumpkin pyjama party, digital art"
    },
    {
      "name": "model",
      "type": "select",
      "options": ["dall-e-3", "dall-e-2"],
      "value": "dall-e-3",
      "required": true,
      "label": "Model"
    },
    {
      "name": "size",
      "type": "select",
      "options": ["best for orientation", "1024x1024", "1792x1024", "1024x1792"],
      "value": "best for orientation",
      "label": "Size",
      "showIf": [
        {
          "field": "model",
          "operator": "eq",
          "value": "dall-e-3"
        }
      ]
    },
    {
      "name": "style",
      "type": "select",
      "options": ["vivid", "natural", ""],
      "value": "vivid",
      "label": "Style",
      "showIf": [
        {
          "field": "model",
          "operator": "eq",
          "value": "dall-e-3"
        }
      ]
    },
    {
      "name": "quality",
      "type": "select",
      "options": ["standard", "hd", ""],
      "value": "standard",
      "label": "Quality",
      "showIf": [
        {
          "field": "model",
          "operator": "eq",
          "value": "dall-e-3"
        }
      ]
    },
    {
      "name": "saveAsset",
      "type": "select",
      "value": "auto",
      "options": ["auto", "always", "never"],
      "label": "Save asset",
      "hint": "Save the generated image to disk as an asset. It'll be placed into the frame's assets folder.\n\nYou can later use the 'Local image' app to play back saved images.\n\nIf set to 'auto', the image will be saved if the frame is set to save assets. If set to 'always', the image will always be saved. If set to 'never', the image will never be saved."
    }
  ],
  "output": [
    {
      "name": "image",
      "type": "image"
    }
  ],
  "cache": {
    "enabled": true,
    "inputEnabled": true,
    "durationEnabled": true,
    "duration": "3600"
  }
}
