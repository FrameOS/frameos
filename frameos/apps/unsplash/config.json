{
    "name": "Unsplash",
    "description": "Random unsplash image",
    "category": "image",
    "version": "1.0.0",
    "fields": [
        {
            "name": "keyword",
            "type": "string",
            "value": "nature",
            "required": false,
            "label": "Random keyword (one word)",
            "placeholder": "e.g. pineapple, nature, birds, power"
        },
        {
            "name": "cache_seconds",
            "type": "string",
            "value": "0",
            "required": false,
            "label": "Seconds to cache the result",
            "placeholder": "Default: 60. Use 0 for no cache"
        },
        {
          "name": "scaling_mode",
          "type": "select",
          "options": ["cover", "contain", "stretch", "center"],
          "value": "cover",
          "required": true,
          "label": "Scaling mode"
        }
    ]
}
