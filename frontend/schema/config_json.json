{
  "$ref": "#/definitions/AppConfig",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AppConfig": {
      "additionalProperties": false,
      "description": "config.json schema",
      "properties": {
        "apt": {
          "description": "List of apt packages to install (mode=rpios)",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "cache": {
          "$ref": "#/definitions/CacheConfig",
          "description": "Default cache settings"
        },
        "category": {
          "description": "Category for this app",
          "type": "string"
        },
        "description": {
          "description": "Description for this app",
          "type": "string"
        },
        "fields": {
          "description": "Fields for app in diagram editor",
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/AppConfigField"
              },
              {
                "$ref": "#/definitions/MarkdownField"
              }
            ]
          },
          "type": "array"
        },
        "name": {
          "description": "Name for this app",
          "type": "string"
        },
        "nixpkgs": {
          "description": "List of nix packages to install (mode=nixos)",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "output": {
          "description": "Returned fields",
          "items": {
            "$ref": "#/definitions/OutputField"
          },
          "type": "array"
        },
        "settings": {
          "description": "List of top level settings exported for this app",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "version": {
          "description": "Version for this app",
          "type": "string"
        }
      },
      "required": ["name"],
      "type": "object"
    },
    "AppConfigField": {
      "additionalProperties": false,
      "properties": {
        "hint": {
          "description": "Info tooltip contents (markdown)",
          "type": "string"
        },
        "label": {
          "description": "Human readable label",
          "type": "string"
        },
        "name": {
          "description": "Unique config field keyword",
          "type": "string"
        },
        "options": {
          "description": "List of options for the field, only used if type is 'select'",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "placeholder": {
          "description": "Placeholder text for the field",
          "type": "string"
        },
        "required": {
          "description": "Whether the field is required",
          "type": "boolean"
        },
        "rows": {
          "description": "Number of rows for the field, only used if type is 'text'",
          "type": "number"
        },
        "secret": {
          "description": "Whether the field is a secret and is hidden from display",
          "type": "boolean"
        },
        "seq": {
          "description": "Turn the field into a multidimensional array of fields. seq=[1, \"rows\"] --> for 1 to rows",
          "items": {
            "items": [
              {
                "type": "string"
              },
              {
                "type": ["number", "string"]
              },
              {
                "type": ["number", "string"]
              }
            ],
            "maxItems": 3,
            "minItems": 3,
            "type": "array"
          },
          "type": "array"
        },
        "showIf": {
          "description": "Conditions on which to show the field",
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/ConfigFieldCondition"
              },
              {
                "$ref": "#/definitions/ConfigFieldConditionAnd"
              }
            ]
          },
          "type": "array"
        },
        "type": {
          "$ref": "#/definitions/AppConfigFieldType",
          "description": "Type of the field"
        },
        "value": {
          "description": "Default value for the field"
        }
      },
      "required": ["name", "label", "type"],
      "type": "object"
    },
    "AppConfigFieldType": {
      "anyOf": [
        {
          "$ref": "#/definitions/FieldType"
        },
        {
          "const": "select",
          "type": "string"
        },
        {
          "const": "font",
          "type": "string"
        }
      ]
    },
    "CacheConfig": {
      "additionalProperties": false,
      "properties": {
        "duration": {
          "type": "string"
        },
        "durationEnabled": {
          "type": "boolean"
        },
        "enabled": {
          "type": "boolean"
        },
        "expression": {
          "type": "string"
        },
        "expressionEnabled": {
          "type": "boolean"
        },
        "expressionType": {
          "$ref": "#/definitions/FieldType"
        },
        "inputEnabled": {
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "ConfigFieldCondition": {
      "additionalProperties": false,
      "properties": {
        "field": {
          "type": "string"
        },
        "operator": {
          "$ref": "#/definitions/ConfigFieldConditionOperator"
        },
        "value": {}
      },
      "required": ["field"],
      "type": "object"
    },
    "ConfigFieldConditionAnd": {
      "additionalProperties": false,
      "properties": {
        "and": {
          "items": {
            "$ref": "#/definitions/ConfigFieldCondition"
          },
          "type": "array"
        }
      },
      "required": ["and"],
      "type": "object"
    },
    "ConfigFieldConditionOperator": {
      "enum": ["eq", "ne", "gt", "lt", "gte", "lte", "empty", "notEmpty", "in", "notIn"],
      "type": "string"
    },
    "FieldType": {
      "enum": ["string", "text", "float", "integer", "boolean", "color", "json", "node", "scene", "image", "font"],
      "type": "string"
    },
    "MarkdownField": {
      "additionalProperties": false,
      "properties": {
        "markdown": {
          "description": "Block of markdown text to display between fields",
          "type": "string"
        },
        "showIf": {
          "description": "Conditions on which to show the field",
          "items": {
            "$ref": "#/definitions/ConfigFieldCondition"
          },
          "type": "array"
        }
      },
      "required": ["markdown"],
      "type": "object"
    },
    "OutputField": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "description": "Name of the output field",
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/FieldType",
          "description": "Type of the field"
        }
      },
      "required": ["name", "type"],
      "type": "object"
    }
  }
}
