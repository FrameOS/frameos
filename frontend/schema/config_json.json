{
  "$ref": "#/definitions/App",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "App": {
      "additionalProperties": false,
      "description": "config.json schema",
      "properties": {
        "cache": {
          "$ref": "#/definitions/CacheConfig",
          "description": "Default cache settings"
        },
        "category": {
          "description": "Category for this app",
          "type": "string"
        },
        "description": {
          "description": "Description for this app",
          "type": "string"
        },
        "fields": {
          "description": "Fields for app in diagram editor",
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/ConfigField"
              },
              {
                "$ref": "#/definitions/MarkdownField"
              }
            ]
          },
          "type": "array"
        },
        "name": {
          "description": "Name for this app",
          "type": "string"
        },
        "output": {
          "description": "Returned fields",
          "items": {
            "$ref": "#/definitions/ConfigField"
          },
          "type": "array"
        },
        "settings": {
          "description": "List of top level settings exported for this app",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "version": {
          "description": "Version for this app",
          "type": "string"
        }
      },
      "required": ["name"],
      "type": "object"
    },
    "CacheConfig": {
      "additionalProperties": false,
      "properties": {
        "cacheDataType": {
          "enum": ["string", "integer", "float", "json"],
          "type": "string"
        },
        "cacheDuration": {
          "type": "string"
        },
        "cacheKey": {
          "type": "string"
        },
        "cacheKeyDataType": {
          "enum": ["string", "integer", "float", "json"],
          "type": "string"
        },
        "cacheType": {
          "enum": ["none", "forever", "duration", "key", "keyDuration"],
          "type": "string"
        }
      },
      "type": "object"
    },
    "ConfigField": {
      "additionalProperties": false,
      "properties": {
        "label": {
          "description": "Human readable label",
          "type": "string"
        },
        "name": {
          "description": "Unique config field keyword",
          "type": "string"
        },
        "options": {
          "description": "List of options for the field, only used if type is 'select'",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "placeholder": {
          "description": "Placeholder text for the field",
          "type": "string"
        },
        "required": {
          "description": "Whether the field is required",
          "type": "boolean"
        },
        "rows": {
          "description": "Number of rows for the field, only used if type is 'text'",
          "type": "number"
        },
        "secret": {
          "description": "Whether the field is a secret and is hidden from display",
          "type": "boolean"
        },
        "seq": {
          "description": "Turn the field into a multidimensional array of fields. seq=[1, \"rows\"] --> for 1 to rows",
          "items": {
            "items": [
              {
                "type": "string"
              },
              {
                "type": ["number", "string"]
              },
              {
                "type": ["number", "string"]
              }
            ],
            "maxItems": 3,
            "minItems": 3,
            "type": "array"
          },
          "type": "array"
        },
        "type": {
          "description": "Type of the field",
          "enum": [
            "string",
            "text",
            "float",
            "integer",
            "boolean",
            "color",
            "select",
            "json",
            "node",
            "scene",
            "image"
          ],
          "type": "string"
        },
        "value": {
          "description": "Default value for the field"
        }
      },
      "required": ["name", "label", "type"],
      "type": "object"
    },
    "MarkdownField": {
      "additionalProperties": false,
      "properties": {
        "markdown": {
          "description": "Block of markdown text to display between fields",
          "type": "string"
        }
      },
      "required": ["markdown"],
      "type": "object"
    }
  }
}
